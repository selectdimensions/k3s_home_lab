# Production Environment Configuration
# k3s Home Lab - Production Settings

# Cluster settings
CLUSTER_NAME=pi-k3s-prod
ENVIRONMENT=production

# Application settings
LOG_LEVEL=warn
DEBUG_MODE=false
ENABLE_METRICS=true

# Resource limits
MAX_REPLICAS=5
MIN_REPLICAS=2

# Monitoring
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_ADMIN_USER=admin

# Data platform
NIFI_MAX_MEMORY=2g
TRINO_MAX_MEMORY=4g
POSTGRESQL_MAX_CONNECTIONS=200

# Storage
STORAGE_CLASS=local-path
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
